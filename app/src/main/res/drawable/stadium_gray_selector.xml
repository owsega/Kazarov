<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <size android:height="@dimen/lr_height" />
            <corners android:radius="@dimen/lr_corner_radius" />
            <stroke android:width="1dp" android:color="@color/gray08a" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <size android:height="@dimen/lr_height" />
            <corners android:radius="@dimen/lr_corner_radius" />
            <stroke android:width="1dp" android:color="@color/gray08a" />
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <size android:height="@dimen/lr_height" />
            <corners android:radius="@dimen/lr_corner_radius" />
            <stroke android:width="1dp" android:color="@color/gray08a" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <size android:height="@dimen/lr_height" />
            <corners android:radius="@dimen/lr_corner_radius" />
            <stroke android:width="1dp" android:color="@color/gray36a" />
        </shape>
    </item>
</selector>
